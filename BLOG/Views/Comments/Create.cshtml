@using BLOG.Controllers;
@model UtilsComponents

@{
    ViewData["Title"] = "Create";
}

<div class="callout large primary">
    <div class="text-center">
        <h1>Diario web</h1>
    </div>
</div>
<section class="grid-container">
    <div class="grid-x grid-margin-x" id="content">
        <div class="medium-9 cell">
            <article class="blog-post">
                <h3>@Model.Post.Title </h3>
                <small>@Model.Post.PostDate</small>
                <p>
                    @Model.Post.Body
                </p>
                <div class="callout">
                    <ul class="menu simple">
                        <li><a href="#">Autor: @Model.AppUser.Name @Model.AppUser.LastName</a></li>
                    </ul>
                </div>
            </article>
            <h3> Comentarios</h3>
            @foreach (var comment in Model.CommentInfo)
            {
                <article class="blog-post">
                    <h5>Usuario: @comment.AppUser.Name @comment.AppUser.LastName </h5>
                    <p>
                        @comment.Comment.Text
                    </p>
                </article>
            }
            <div class="col-8 new">
                <h4> Haz un nuevo comantario</h4>
                <form method="post" id="formRegistro" asp-action="Create" asp-controller="Comments">
                    <input type="hidden" name="postId" value="@Model.Post.Id" />
                    <input type="hidden" name="authorId" value="@Model.Post.AuthorId" />
                    <div class="row d-flex justify-content-center align-items-center">
                        <div class="form-group">
                            <textarea name="text" class="form-control form-control-add form-control form-control-add-lg" placeholder="Haz un comentario..." rows="5"></textarea>
                            <span class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col d-flex justify-content-end align-items-center">
                            <input type="submit" value="Guardar" id="ReportButton" class="add_confirm btn btn-primary btn-sm" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

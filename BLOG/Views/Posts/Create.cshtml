@model dynamic

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" id="formRegistro" asp-action="Create" asp-controller="Posts">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label name="Title" class="control-label">Titulo del post</label>
                <input name="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label name="Body" class="control-label">Cuerpo del post</label>
                <input name="Body" class="form-control" />
            </div>
            <div class="form-group">
                <label name="category">Categoría</label>
                <select id="Category" name="category" class="form-control form-control-add" aria-required="true" placeholder="Categoría">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id"> @category.Name </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
